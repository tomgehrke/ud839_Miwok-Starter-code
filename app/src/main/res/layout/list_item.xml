<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="@style/ListItemStyle">

    <ImageView
        android:id="@+id/item_image_view"
        style="@style/ListItemIconStyle"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/translationLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/item_image_view"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/miwok_text_view"
            style="@style/ListItemMiwokWordStyle"
            android:layout_width="match_parent"
            tools:text="lutti"/>

        <TextView
            android:id="@+id/default_text_view"
            style="@style/ListItemDefaultWordStyle"
            android:layout_width="match_parent"
            tools:text="one"/>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/list_item_play_icon_size"
        android:layout_height="@dimen/list_item_play_icon_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_play_arrow_white_24dp"/>

</RelativeLayout>